---
// Page with a list of All blog posts

import Card from "src/components/Card.astro";
import Baselayout from "src/layouts/Base.layout.astro";
import BlogListlayout from "src/layouts/BlogList.layout.astro";
import { getAllPosts } from "src/utils/getAllPosts.astro";

const posts = await getAllPosts();
---

<Baselayout>
  <BlogListlayout heading="All Posts">
    {posts.map((post) => <Card post={post} />)}
  </BlogListlayout>
</Baselayout>
