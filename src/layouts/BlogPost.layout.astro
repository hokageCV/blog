---
import { CollectionEntry } from "astro:content";
import Baselayout from "./Base.layout.astro";
import { dateToWordedMonthDate } from "src/utils/date.utils";

type Props = CollectionEntry<"blog">["data"];

const { title, description, publishedDate, updatedDate } = Astro.props;
---

<Baselayout title={title} description={description}>
  <article class="flex flex-col items-center justify-center w-fit md:w-full m-0.5">
    <div class="mb-5 prose">
      <h1 class="text-4xl text-center mb-2">{title}</h1>

      <p class="text-sm text-baseTextDim my-0">
        Published on {dateToWordedMonthDate(publishedDate)}
      </p>
      {
        updatedDate && (
          <p class="text-xs text-baseTextDim mt-0">
            Last updated on {dateToWordedMonthDate(updatedDate)}
          </p>
        )
      }
    </div>
    <div class="prose mb-5">
      <slot />
    </div>
  </article>
</Baselayout>
